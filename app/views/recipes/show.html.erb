<div class="main-content">
  <div id="recipe_top" class="row">
    <div class="col-md-4">
      <%= image_tag @recipe.image.url(:medium), class: "recipe_image" %>
    </div>
    <div class="col-md-8">
      <div id="recipe_info">
        <h1><%= @recipe.name %></h1>
        <p>
          <%= @recipe.description %>
        </p>
        <p>
          Submitted by <%= @recipe.user.email %>
        </p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div id="ingredients">
        <h2>Ingredients</h2>
        <ul>
          <% @recipe.ingredients.each do |ingredient| %>
            <li><%= ingredient.name %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-md-6">
      <div id="directions">
        <h2>Direction</h2>
        <ol>
          <% @recipe.directions.each do |direction| %>
            <li><%= direction.step %></li>
          <% end %>
        </ol>
      </div>
    </div>
  </div>
</div>

<% if user_signed_in? && @recipe.user.id == current_user.id %>
  <h5 class="butt">
    <%= link_to 'Confirm', root_path, class:'btn btn-default'%>
    <%= link_to 'Edit', edit_recipe_path, class:'btn btn-default'%>
    <%= link_to 'Delete', recipe_path(@recipe), method: :delete, data: { confirm: "Are you sure?"},class:'btn btn-default' %>
  </h5>
  <% else %>
    <h5 class="butt">
      <%= link_to 'Back', root_path, class:'btn btn-default'%>
    </h5>
<% end %>
